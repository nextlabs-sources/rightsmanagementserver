hibernate.hbm2ddl.auto=update
javax.persistence.jdbc.driver=<%= @driver %>
javax.persistence.jdbc.url=<%= @jdbc_url %>
javax.persistence.jdbc.user=<%= @username %>
javax.persistence.jdbc.password=<%= @password %>
hibernate.connection.provider_class=org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider
hibernate.c3p0.max_size=100
hibernate.c3p0.min_size=5
hibernate.c3p0.acquire_increment=5
hibernate.c3p0.idle_test_period=500
hibernate.c3p0.max_statements=50
hibernate.c3p0.timeout=10000